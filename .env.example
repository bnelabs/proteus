# PROTEUS BLE Gateway Configuration
# Copy this file to .env and customize as needed
# Then source it: source .env

# ============================================================================
# Device Configuration
# ============================================================================

# BLE device name to search for (case-insensitive partial match)
export PROTEUS_DEVICE="PROTEUS"

# Maximum delay between reconnection attempts (seconds)
export RECONNECT_MAX_DELAY="120"

# Number of readings to buffer during disconnection
export BUFFER_SIZE="1000"

# Connection health check interval (seconds)
export HEALTH_CHECK_INTERVAL="5"

# ============================================================================
# MQTT Configuration (Primary Broker)
# ============================================================================

# Enable/disable MQTT publishing
export MQTT_ENABLED="true"

# MQTT broker hostname (REQUIRED)
export MQTT_HOST="your-mqtt-host-here"

# MQTT port (default: 1883, TLS: 8883)
export MQTT_PORT="1883"

# MQTT authentication (REQUIRED for ThingsBoard)
# Set this to your ThingsBoard device access token
# DO NOT commit real tokens to git!
export MQTT_USER="your-device-access-token-here"

# MQTT password (leave empty for ThingsBoard)
export MQTT_PASSWORD=""

# ============================================================================
# NATS Configuration (Optional Secondary Broker)
# ============================================================================

# Enable/disable NATS publishing
export NATS_ENABLED="false"

# NATS server URL
export NATS_URL="nats://localhost:4222"

# ============================================================================
# Topic Configuration
# ============================================================================

# Base topic prefix for all sensor data
# Data will be published to: {prefix}/{sensor_type}
# Example: oksal/sensor/proteus/accelerometer
export TOPIC_PREFIX="oksal/sensor/proteus"
